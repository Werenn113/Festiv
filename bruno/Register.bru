meta {
  name: Register
  type: http
  seq: 2
}

post {
  url: {{urlBase}}/auth/register
  body: json
  auth: none
}

body:json {
  {
    "username": "{{username}}",
    "email": "{{email}}",
    "password": "{{password}}"
  }
}

vars:post-response {
  access_token: res.body.access_token
  ~auth.cookie: res.headers["set-cookie"]
}

script:post-response {
  const cookies = res.getHeader('set-cookie');
  
  if(cookies) {
    bru.setVar("authCookie", cookies.join('; '));
  }
}
