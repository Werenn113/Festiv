meta {
  name: Login
  type: http
  seq: 3
}

post {
  url: {{urlBase}}/auth/login
  body: json
  auth: none
}

body:json {
  {
    "email": "{{email}}",
    "password": "{{password}}"
  }
}

vars:post-response {
  access_token: res.body.access_token
  ~authCookie: res.getHeader('set-cookie')
}

script:post-response {
  const cookies = res.getHeader('set-cookie');
  
  if(cookies) {
    bru.setVar("authCookie", cookies.join('; '));
  }
}
